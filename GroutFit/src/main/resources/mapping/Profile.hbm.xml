<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.GroutFit.Model">
    <class name="Profile">

        <meta attribute="class-description">
            This class contains the profile information.
        </meta>

        <id name="email" type="string" column="email">
            <generator class="assigned"/>
        </id>

        <property name="password" column="password" type="string"/>
        <property name="sizeShirt" column="size_shirt" type="string"/>
        <property name="sizePants" column="size_pants" type="string"/>
        <property name="sizeDress" column="size_dress" type="string"/>

        <set name="outfits" inverse="true" cascade="all">
            <key column="outfit_id" not-null="true"/> <!-- there's an error on this row for "email" -->
            <one-to-many class="Outfit"/>
        </set>

        <set name="wishlist" table="wishlist">
            <key column="email"/>
            <many-to-many column="item_id" unique="true" class="ClothingItem"/>
        </set>
    </class>
</hibernate-mapping>