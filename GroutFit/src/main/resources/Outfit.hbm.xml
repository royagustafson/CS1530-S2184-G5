<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.GroutFit.Model">
    <class name="Outfit" table="outfit">

        <meta attribute="class-description">
            This class represents a user's custom outfit
        </meta>

        <id name="outfitId" type="int" column="outfit_id">
            <generator class="native"/>
        </id>
        <property name="fullBody" column="full_body" type="boolean"/>

        <many-to-one name="creator" column="creator" class="Profile" not-null="true"/>
        <many-to-one name="top" column="top" class="ClothingItem" not-null="true"/>
        <many-to-one name="bottom" column="bottom" class="ClothingItem" not-null="true"/>
        <many-to-one name="jacket" column="jacket" class="ClothingItem" not-null="true"/>
    </class>
</hibernate-mapping>