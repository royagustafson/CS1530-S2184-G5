<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.GroutFit.Model">
    <class name="ClothingType" table="clothing_type">

        <meta attribute = "class-description">
            This class represents a type of clothing for which there can be many sizes, colors, etc
        </meta>

        <id name="typeId" type="string" column = "type_id">
            <generator class="native"/>
        </id>

        <property name="name" column="name" type="string"/>
        <property name="article" column="category" type="string"/>
        <property name="price" column="price" type="double"/>
        <property name="description" column="description" type="string"/>
        <set name="items" inverse="true" cascade="all">
            <key column="type_id" not-null="true"/>
            <one-to-many class="ClothingItem"/>
        </set>
    </class>
</hibernate-mapping>