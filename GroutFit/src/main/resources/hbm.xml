<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="Profile" table="profile">
        <meta attribute = "class-description">
            This class contains the profile information.
        </meta>

        <id name="email" type="string" column = "email">
            <generator class="native"/>
        </id>

        <property name="password" column="password" type="string"/>
        <property name="sizeShirt" column="size_shirt" type="string"/>
        <property name="sizePants" column="size_pants" type="string"/>
        <property name="sizeDress" column="size_dress" type="string" />

        <set name="outfits" inverse="true" cascade="all">
            <key column="email" not-null="true"/>
            <one-to-many class="Outfit"/>
        </set>

        <set name="wishlist" table="wishlist" inverse="false" lazy="true" cascade="all">
            <key>
                <column name="email" not-null="true" unique="true"/>
            </key>
            <many-to-many entity-name="ClothingItem">
                <column name="item_id" not-null="true"/>
            </many-to-many>
        </set>
    </class>
    <class name="ClothingType" table="clothing_type">

        <meta attribute = "class-description">
            This class represents a type of clothing for which there can be many sizes, colors, etc
        </meta>

        <id name="typeId" type="string" column = "type_id">
            <generator class="native"/>
        </id>

        <property name="name" column="name" type="string"/>
        <property name="article" column="category" type="string"/>
        <property name="price" column="price" type="double"/>
        <property name="description" column="description" type="string"/>
        <set name="items" inverse="true" cascade="all">
            <key column="type_id" not-null="true"/>
            <one-to-many class="ClothingItem"/>
        </set>
    </class>
    <class name="ClothingItem" table="clothing_item">

        <meta attribute = "class-description">
            This class represents a clothing item with a specific color, size, and quantity in stock
        </meta>

        <id name="itemId" type="string" column="item_id">
            <generator class="native"/>
        </id>

        <property name="color" column="color" type="string"/>
        <property name="size" column="size" type="string"/>
        <property name="quantity" column="quantity" type="int"/>
        <property name="gender" column="gender" type="boolean"/>

        <many-to-one name="type" class="ClothingType" column="type_id"/>
    </class>
    <class name="Outfit" table="outfit">

        <meta attribute = "class-description">
            This class represents a user's custom outfit
        </meta>

        <id name="outfitId" type="int" column = "outfit_id">
            <generator class="native"/>
        </id>
        <property name="fullBody" column="full_body" type="boolean"/>

        <many-to-one name="creator" column="creator" class="Profile" not-null="true"/>
        <many-to-one name="top" column="top" class="ClothingItem" not-null="true"/>
        <many-to-one name="bottom" column="bottom" class="ClothingItem" not-null="true"/>
        <many-to-one name="jacket" column="jacket" class="ClothingItem" not-null="true"/>
    </class>
</hibernate-mapping>